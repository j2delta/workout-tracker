<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTracker.WorkoutsPageView"
             xmlns:local="clr-namespace:WorkoutTracker.ViewModels"
             Title="Workouts">
    <VerticalStackLayout>
        <Button
                x:Name="NavigateToExercises"
                Text="Exercises" 
                SemanticProperties.Hint="Go to Exercises page"
                Command="{Binding GoToExercisesCommand, Source={RelativeSource AncestorType={x:Type local:WorkoutsPageViewModel}}}"
                HorizontalOptions="Fill" />
        <Button 
            x:Name="NavigateToNewWorkout"
            Text="New Workout"
            Command="{Binding GoToNewWorkoutCommand, Source={RelativeSource AncestorType={x:Type local:WorkoutsPageViewModel}}}"
            />
    </VerticalStackLayout>
</ContentPage>